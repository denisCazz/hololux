---
import Layout from '../layout/mainLayout.astro';
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Section from '../components/Section.astro';
import ChartContainer from '../components/ChartContainer.astro';
import MetricCard from '../components/MetricCard.astro';
import ChallengeCard from '../components/ChallengeCard.astro';
import FlowStep from '../components/FlowStep.astro';
import AIResultCard from '../components/AIResultCard.astro';
---

<Layout title="Holo Lux - AR Systems" description="A New Paradigm for Energy-Efficient AR Displays">
  <Header />
  <Navigation />
  
  <main class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-16 mt-4">
    <!-- Energy Efficiency Analysis -->
    <Section id="efficiency" title="efficiency_title" description="efficiency_description">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8 mb-16">
        <ChartContainer id="consumptionChart" title="consumption_chart_title" caption="consumption_chart_caption" className="animate-on-scroll" />
        <ChartContainer id="efficiencyChart" title="efficiency_chart_title" caption="efficiency_chart_caption" chartType="doughnut" className="animate-on-scroll" />
        <ChartContainer id="transparencyChart" title="transparency_chart_title" caption="transparency_chart_caption" chartType="line" className="animate-on-scroll" />
      </div>
      
      <!-- Key Performance Metrics -->
      <Section id="performance" title="performance_title" description="performance_description" className="mb-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
          <MetricCard title="power_reduction_title" value="85%" description="power_reduction_desc" valueColor="text-emerald-600 dark:text-emerald-400" />
          <MetricCard title="transparency_improvement_title" value="95%" description="transparency_improvement_desc" valueColor="text-blue-600 dark:text-blue-400" />
          <MetricCard title="efficiency_gain_title" value="300%" description="efficiency_gain_desc" valueColor="text-purple-600 dark:text-purple-400" />
        </div>
      </Section>
    </Section>

    <!-- Technology Challenges -->
    <Section id="challenges" title="challenges_title" description="challenges_description">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
        <ChallengeCard icon="‚ö°" title="challenge_power_title" description="challenge_power_desc" />
        <ChallengeCard icon="üëÅÔ∏è" title="challenge_transparency_title" description="challenge_transparency_desc" />
        <ChallengeCard icon="üí°" title="challenge_efficiency_title" description="challenge_efficiency_desc" />
      </div>
    </Section>

    <!-- Our Solution -->
    <Section id="solution" title="solution_title" description="solution_description">
      <!-- HOLO LUX Technology Image -->
      <div class="mb-12 lg:mb-16 text-center">
        <div class="relative inline-block">
          <img 
            src="/images/image.png" 
            alt="HOLO LUX AR Display Technology" 
            class="w-full max-w-2xl mx-auto rounded-2xl shadow-2xl border border-cyan-500/20 hover:border-cyan-400/40 transition-all duration-500 hover:scale-[1.02]"
            loading="lazy"
          />
          <!-- Tech overlay effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/10 via-transparent to-purple-500/10 rounded-2xl pointer-events-none opacity-0 hover:opacity-100 transition-opacity duration-500"></div>
        </div>
        <p class="text-sm lg:text-base text-slate-400 mt-4 font-mono">HOLO LUX - Display Opto-Meccanico Micro LED</p>
      </div>
      
      <div class="flex flex-col lg:flex-row items-center justify-center space-y-12 lg:space-y-0 lg:space-x-12 mb-16">
        <FlowStep icon="üî¨" text="solution_step1" stepNumber={1} />
        <FlowStep icon="üîß" text="solution_step2" stepNumber={2} />
        <FlowStep icon="üì±" text="solution_step3" stepNumber={3} isLast={true} />
      </div>

      <!-- Technology Comparison -->
      <Section id="tech-comparison" title="technology_comparison_title" description="technology_comparison_description" className="mt-16">
        <!-- Comparison Table Layout -->
        <div class="max-w-6xl mx-auto">
          <!-- Header Row -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="text-center animate-on-scroll comparison-tech" style="animation-delay: 0.1s;">
              <div class="bg-gradient-to-br from-orange-50 to-red-50 dark:from-orange-900/20 dark:to-red-900/20 rounded-2xl p-6 border-2 border-orange-200/50 dark:border-orange-700/50">
                <div class="text-4xl mb-4">üî¨</div>
                <h3 class="text-xl font-bold text-orange-700 dark:text-orange-300 mb-2" data-lang-key="oled_title"></h3>
                <p class="text-sm text-orange-600 dark:text-orange-400" data-lang-key="oled_description"></p>
              </div>
            </div>
            
            <div class="text-center animate-on-scroll comparison-tech" style="animation-delay: 0.2s;">
              <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-2xl p-6 border-2 border-blue-200/50 dark:border-blue-700/50">
                <div class="text-4xl mb-4">‚ö°</div>
                <h3 class="text-xl font-bold text-blue-700 dark:text-blue-300 mb-2" data-lang-key="micro_led_title"></h3>
                <p class="text-sm text-blue-600 dark:text-blue-400" data-lang-key="micro_led_description"></p>
              </div>
            </div>
            
            <div class="text-center animate-on-scroll comparison-tech" style="animation-delay: 0.3s;">
              <div class="bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-2xl p-6 border-2 border-green-200/50 dark:border-green-700/50 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-r from-green-400/10 to-emerald-400/10 animate-pulse"></div>
                <div class="relative z-10">
                  <div class="text-4xl mb-4">‚ú®</div>
                  <h3 class="text-xl font-bold text-green-700 dark:text-green-300 mb-2" data-lang-key="holographic_title"></h3>
                  <p class="text-sm text-green-600 dark:text-green-400" data-lang-key="holographic_description"></p>
                  <div class="mt-2 inline-flex items-center px-3 py-1 rounded-full bg-green-100 dark:bg-green-800 text-xs font-semibold text-green-800 dark:text-green-200">
                    üèÜ Nostra Tecnologia
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- States Comparison -->
        </div>
      </Section>

    <!-- Development Roadmap -->
    <Section id="roadmap" title="roadmap_title" description="roadmap_description">
      <div class="max-w-6xl mx-auto">
        <!-- Desktop Timeline Container - nascosto su mobile -->
        <div class="relative hidden lg:block">
          <!-- Timeline Line -->
          <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-gradient-to-b from-blue-400 via-blue-500 to-blue-600"></div>
          
          <!-- Timeline Steps -->
          <div class="space-y-16">
            <!-- Step 1 -->
            <div class="relative animate-on-scroll" style="animation-delay: 0.1s;">
              <div class="flex items-center justify-between">
                <div class="w-5/12 text-right pr-8">
                  <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-2xl p-6 shadow-lg border border-blue-200/50 dark:border-blue-700/50 hover:shadow-xl transition-all duration-300 hover:scale-105">
                    <div class="flex items-center justify-end mb-4">
                      <div class="bg-blue-500 text-white rounded-full w-12 h-12 flex items-center justify-center text-xl font-bold mr-4">1</div>
                      <i class="fas fa-flask text-3xl text-blue-500"></i>
                    </div>
                    <h3 class="text-xl font-bold text-blue-700 dark:text-blue-300 mb-3" data-lang-key="roadmap_step1_title"></h3>
                    <p class="text-blue-600 dark:text-blue-400" data-lang-key="roadmap_step1_desc"></p>
                  </div>
                </div>
                <div class="w-2/12 text-center">
                  <div class="bg-blue-500 text-white rounded-full w-8 h-8 flex items-center justify-center mx-auto border-4 border-white dark:border-gray-900 shadow-lg">
                    <div class="w-3 h-3 bg-white rounded-full"></div>
                  </div>
                </div>
                <div class="w-5/12"></div>
              </div>
            </div>
            
            <!-- Step 2 -->
            <div class="relative animate-on-scroll" style="animation-delay: 0.2s;">
              <div class="flex items-center justify-between">
                <div class="w-5/12"></div>
                <div class="w-2/12 text-center">
                  <div class="bg-green-500 text-white rounded-full w-8 h-8 flex items-center justify-center mx-auto border-4 border-white dark:border-gray-900 shadow-lg">
                    <div class="w-3 h-3 bg-white rounded-full"></div>
                  </div>
                </div>
                <div class="w-5/12 pl-8">
                  <div class="bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-2xl p-6 shadow-lg border border-green-200/50 dark:border-green-700/50 hover:shadow-xl transition-all duration-300 hover:scale-105">
                    <div class="flex items-center justify-start mb-4">
                      <div class="bg-green-500 text-white rounded-full w-12 h-12 flex items-center justify-center text-xl font-bold mr-4">2</div>
                      <i class="fas fa-cogs text-3xl text-green-500"></i>
                    </div>
                    <h3 class="text-xl font-bold text-green-700 dark:text-green-300 mb-3" data-lang-key="roadmap_step2_title"></h3>
                    <p class="text-green-600 dark:text-green-400" data-lang-key="roadmap_step2_desc"></p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Step 3 -->
            <div class="relative animate-on-scroll" style="animation-delay: 0.3s;">
              <div class="flex items-center justify-between">
                <div class="w-5/12 text-right pr-8">
                  <div class="bg-gradient-to-br from-purple-50 to-violet-50 dark:from-purple-900/20 dark:to-violet-900/20 rounded-2xl p-6 shadow-lg border border-purple-200/50 dark:border-purple-700/50 hover:shadow-xl transition-all duration-300 hover:scale-105">
                    <div class="flex items-center justify-end mb-4">
                      <div class="bg-purple-500 text-white rounded-full w-12 h-12 flex items-center justify-center text-xl font-bold mr-4">3</div>
                      <i class="fas fa-industry text-3xl text-purple-500"></i>
                    </div>
                    <h3 class="text-xl font-bold text-purple-700 dark:text-purple-300 mb-3" data-lang-key="roadmap_step3_title"></h3>
                    <p class="text-purple-600 dark:text-purple-400" data-lang-key="roadmap_step3_desc"></p>
                  </div>
                </div>
                <div class="w-2/12 text-center">
                  <div class="bg-purple-500 text-white rounded-full w-8 h-8 flex items-center justify-center mx-auto border-4 border-white dark:border-gray-900 shadow-lg">
                    <div class="w-3 h-3 bg-white rounded-full"></div>
                  </div>
                </div>
                <div class="w-5/12"></div>
              </div>
            </div>
            
            <!-- Step 4 -->
            <div class="relative animate-on-scroll" style="animation-delay: 0.4s;">
              <div class="flex items-center justify-between">
                <div class="w-5/12"></div>
                <div class="w-2/12 text-center">
                  <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center mx-auto border-4 border-white dark:border-gray-900 shadow-lg">
                    <div class="w-3 h-3 bg-white rounded-full animate-pulse"></div>
                  </div>
                </div>
                <div class="w-5/12 pl-8">
                  <div class="bg-gradient-to-br from-red-50 to-orange-50 dark:from-red-900/20 dark:to-orange-900/20 rounded-2xl p-6 shadow-lg border border-red-200/50 dark:border-red-700/50 hover:shadow-xl transition-all duration-300 hover:scale-105 relative overflow-hidden">
                    <div class="absolute inset-0 bg-gradient-to-r from-red-400/5 to-orange-400/5 animate-pulse"></div>
                    <div class="relative z-10">
                      <div class="flex items-center justify-start mb-4">
                        <div class="bg-red-500 text-white rounded-full w-12 h-12 flex items-center justify-center text-xl font-bold mr-4">4</div>
                        <i class="fas fa-rocket text-3xl text-red-500"></i>
                      </div>
                      <h3 class="text-xl font-bold text-red-700 dark:text-red-300 mb-3" data-lang-key="roadmap_step4_title"></h3>
                      <p class="text-red-600 dark:text-red-400" data-lang-key="roadmap_step4_desc"></p>
                      <div class="mt-4 inline-flex items-center px-3 py-1 rounded-full bg-red-100 dark:bg-red-800 text-xs font-semibold text-red-800 dark:text-red-200">
                        üéØ Obiettivo Finale
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Mobile Timeline - mostrato solo su mobile -->
        <div class="block lg:hidden space-y-6">
          <div class="flex items-start space-x-4 animate-on-scroll" style="animation-delay: 0.1s;">
            <div class="bg-blue-500 text-white rounded-full w-12 h-12 flex items-center justify-center text-xl font-bold flex-shrink-0">1</div>
            <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl p-4 flex-1 shadow-lg">
              <h3 class="text-lg font-bold text-blue-700 dark:text-blue-300 mb-2" data-lang-key="roadmap_step1_title"></h3>
              <p class="text-blue-600 dark:text-blue-400 text-sm" data-lang-key="roadmap_step1_desc"></p>
            </div>
          </div>
          
          <div class="flex items-start space-x-4 animate-on-scroll" style="animation-delay: 0.2s;">
            <div class="bg-green-500 text-white rounded-full w-12 h-12 flex items-center justify-center text-xl font-bold flex-shrink-0">2</div>
            <div class="bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-xl p-4 flex-1 shadow-lg">
              <h3 class="text-lg font-bold text-green-700 dark:text-green-300 mb-2" data-lang-key="roadmap_step2_title"></h3>
              <p class="text-green-600 dark:text-green-400 text-sm" data-lang-key="roadmap_step2_desc"></p>
            </div>
          </div>
          
          <div class="flex items-start space-x-4 animate-on-scroll" style="animation-delay: 0.3s;">
            <div class="bg-purple-500 text-white rounded-full w-12 h-12 flex items-center justify-center text-xl font-bold flex-shrink-0">3</div>
            <div class="bg-gradient-to-br from-purple-50 to-violet-50 dark:from-purple-900/20 dark:to-violet-900/20 rounded-xl p-4 flex-1 shadow-lg">
              <h3 class="text-lg font-bold text-purple-700 dark:text-purple-300 mb-2" data-lang-key="roadmap_step3_title"></h3>
              <p class="text-purple-600 dark:text-purple-400 text-sm" data-lang-key="roadmap_step3_desc"></p>
            </div>
          </div>
          
          <div class="flex items-start space-x-4 animate-on-scroll" style="animation-delay: 0.4s;">
            <div class="bg-red-500 text-white rounded-full w-12 h-12 flex items-center justify-center text-xl font-bold flex-shrink-0">4</div>
            <div class="bg-gradient-to-br from-red-50 to-orange-50 dark:from-red-900/20 dark:to-orange-900/20 rounded-xl p-4 flex-1 shadow-lg">
              <h3 class="text-lg font-bold text-red-700 dark:text-red-300 mb-2" data-lang-key="roadmap_step4_title"></h3>
              <p class="text-red-600 dark:text-red-400 text-sm" data-lang-key="roadmap_step4_desc"></p>
              <div class="mt-3 inline-flex items-center px-2 py-1 rounded-full bg-red-100 dark:bg-red-800 text-xs font-semibold text-red-800 dark:text-red-200">
                üéØ Obiettivo Finale
              </div>
            </div>
          </div>
        </div>
      </div>
    </Section>

    <!-- AI Market Analysis -->
    <Section id="ai-analysis" title="ai_analysis_title" description="ai_analysis_description">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        <AIResultCard title="ai_result1_title" description="ai_result1_desc" />
        <AIResultCard title="ai_result2_title" description="ai_result2_desc" />
        <AIResultCard title="ai_result3_title" description="ai_result3_desc" />
      </div>
    </Section>
  </main>

  <Footer />
</Layout>
