---
// Flow step component for solution visualization
export interface Props {
  icon: string;
  text: string;
  isLast?: boolean;
}

const { icon, text, isLast = false } = Astro.props;
---

<div class="flex flex-col lg:flex-row items-center animate-on-scroll">
  <!-- Step container -->
  <div class="relative p-6 md:p-8 bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl shadow-lg border border-gray-200/30 dark:border-gray-700/30 backdrop-blur-sm">
    <!-- Content -->
    <div class="relative z-10 text-center">
      <div class="text-4xl md:text-5xl mb-4 filter drop-shadow-lg">
        {icon}
      </div>
      <p class="text-sm md:text-base font-semibold text-gray-700 dark:text-gray-300 max-w-32" data-lang-key={text}></p>
    </div>
  </div>
  
  {!isLast && (
    <!-- Simplified arrow without animations -->
    <div class="my-6 lg:my-0 lg:mx-8 flex items-center justify-center">
      <div class="flex items-center space-x-2 text-[#4DA6FF] dark:text-blue-500">
        <!-- Mobile: vertical arrow -->
        <div class="lg:hidden">
          <div class="w-1 h-8 bg-gradient-to-b from-[#0073E6] to-[#4DA6FF] rounded-full"></div>
          <div class="text-2xl font-bold -mt-2">↓</div>
        </div>
        <!-- Desktop: horizontal arrow -->
        <div class="hidden lg:flex items-center space-x-1">
          <div class="w-8 h-1 bg-gradient-to-r from-[#0073E6] to-[#4DA6FF] rounded-full"></div>
          <div class="text-2xl font-bold">→</div>
          <div class="w-8 h-1 bg-gradient-to-r from-[#4DA6FF] to-transparent rounded-full"></div>
        </div>
      </div>
    </div>
  )}
</div>
