---
// Enhanced flow step component for solution visualization
export interface Props {
  icon: string;
  text: string;
  isLast?: boolean;
  stepNumber?: number;
}

const { icon, text, isLast = false, stepNumber } = Astro.props;
---

<div class="flex flex-col lg:flex-row items-center animate-on-scroll group">
  <!-- Enhanced step container -->
  <div class="relative p-8 md:p-10 bg-gradient-to-br from-white via-blue-50/30 to-indigo-50/20 dark:from-gray-800 dark:via-gray-800/90 dark:to-gray-900 rounded-3xl shadow-xl hover:shadow-2xl border border-gray-200/50 dark:border-gray-700/50 backdrop-blur-md transition-all duration-500 hover:scale-105 hover:-rotate-1 transform-gpu">
    
    <!-- Step number badge -->
    {stepNumber && (
      <div class="absolute -top-3 -right-3 w-8 h-8 bg-gradient-to-br from-[#0073E6] to-[#004080] dark:from-[#4DA6FF] dark:to-[#2563EB] rounded-full flex items-center justify-center text-white font-bold text-sm shadow-lg border-2 border-white dark:border-gray-800 group-hover:scale-110 transition-transform duration-300">
        {stepNumber}
      </div>
    )}
    
    <!-- Glowing background effect -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 via-indigo-500/5 to-purple-500/5 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    
    <!-- Shimmer effect -->
    <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700">
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
    </div>
    
    <!-- Content -->
    <div class="relative z-10 text-center">
      <!-- Enhanced icon with glow -->
      <div class="relative mb-6">
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-400/30 to-indigo-400/30 rounded-full blur-xl group-hover:blur-2xl transition-all duration-500"></div>
        </div>
        <div class="relative text-5xl md:text-6xl filter drop-shadow-xl group-hover:scale-110 transition-transform duration-300">
          {icon}
        </div>
      </div>
      
      <!-- Enhanced text -->
      <div class="space-y-2">
        <p class="text-base md:text-lg font-bold text-gray-800 dark:text-gray-100 group-hover:text-[#0073E6] dark:group-hover:text-[#4DA6FF] transition-colors duration-300" data-lang-key={text}></p>
        <div class="w-12 h-0.5 bg-gradient-to-r from-[#0073E6] to-[#4DA6FF] mx-auto rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      </div>
    </div>
    
    <!-- Corner accent -->
    <div class="absolute bottom-4 left-4 w-2 h-2 bg-gradient-to-br from-[#0073E6] to-[#4DA6FF] rounded-full opacity-50 group-hover:opacity-100 group-hover:scale-150 transition-all duration-300"></div>
  </div>
  
  {!isLast && (
    <!-- Enhanced arrow with modern design -->
    <div class="my-8 lg:my-0 lg:mx-10 flex items-center justify-center">
      <!-- Mobile: enhanced vertical arrow -->
      <div class="lg:hidden flex flex-col items-center space-y-2">
        <div class="flex flex-col items-center">
          <div class="w-0.5 h-6 bg-gradient-to-b from-[#0073E6] to-[#4DA6FF] rounded-full"></div>
          <div class="w-1 h-1 bg-[#4DA6FF] rounded-full"></div>
          <div class="w-1.5 h-1.5 bg-[#4DA6FF] rounded-full"></div>
          <div class="w-2 h-2 bg-[#4DA6FF] rounded-full"></div>
        </div>
        <svg class="w-6 h-6 text-[#4DA6FF] animate-bounce" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 3a1 1 0 01.707.293l3 3a1 1 0 01-1.414 1.414L11 6.414V16a1 1 0 11-2 0V6.414L7.707 7.707a1 1 0 01-1.414-1.414l3-3A1 1 0 0110 3z" clip-rule="evenodd" transform="rotate(180 10 10)" />
        </svg>
      </div>
      
      <!-- Desktop: enhanced horizontal arrow -->
      <div class="hidden lg:flex items-center space-x-3">
        <div class="flex items-center space-x-1">
          <div class="w-6 h-0.5 bg-gradient-to-r from-[#0073E6] to-[#4DA6FF] rounded-full"></div>
          <div class="w-1 h-1 bg-[#4DA6FF] rounded-full"></div>
          <div class="w-1.5 h-1.5 bg-[#4DA6FF] rounded-full"></div>
          <div class="w-2 h-2 bg-[#4DA6FF] rounded-full"></div>
        </div>
        <svg class="w-6 h-6 text-[#4DA6FF] group-hover:translate-x-1 transition-transform duration-300" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        <div class="flex items-center space-x-1">
          <div class="w-2 h-2 bg-[#4DA6FF] rounded-full"></div>
          <div class="w-1.5 h-1.5 bg-[#4DA6FF] rounded-full"></div>
          <div class="w-1 h-1 bg-[#4DA6FF] rounded-full"></div>
          <div class="w-6 h-0.5 bg-gradient-to-r from-[#4DA6FF] to-transparent rounded-full"></div>
        </div>
      </div>
    </div>
  )}
</div>
