---
// Footer component
---

<footer class="relative bg-gradient-to-r from-[#004080] via-[#0059B3] to-[#0073E6] dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 text-white p-8 md:p-12 text-center border-t border-transparent dark:border-gray-700/50 overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-blue-600/20 to-purple-600/20"></div>
    <div class="absolute top-4 right-4 w-16 h-16 bg-white/10 rounded-full animate-pulse"></div>
    <div class="absolute bottom-4 left-4 w-12 h-12 bg-blue-300/20 rounded-full animate-bounce"></div>
  </div>
  
  <!-- Main content -->
  <div class="relative z-10">
    <!-- Logo/Brand section -->
    <div class="mb-6">
      <h3 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-white to-blue-200 bg-clip-text text-transparent mb-2">
        Holo Lux
      </h3>
      <div class="w-24 h-1 bg-gradient-to-r from-transparent via-white to-transparent mx-auto"></div>
    </div>
    
    <!-- Footer text -->
    <p class="text-blue-100 dark:text-blue-300 text-sm md:text-base font-light mb-4" data-lang-key="footer_text"></p>
    
    <!-- Privacy links -->
    <div class="flex justify-center space-x-6 mb-6">
      <a href="/privacy" class="text-blue-200 hover:text-white text-sm transition-colors duration-200 underline" data-lang-key="privacy_policy">
        Privacy Policy
      </a>
      <span class="text-blue-300">â€¢</span>
      <a href="/privacy#terms" class="text-blue-200 hover:text-white text-sm transition-colors duration-200 underline" data-lang-key="terms_title">
        Terms of Service
      </a>
    </div>
    
    <!-- GDPR Badge -->
    <div class="flex justify-center mb-6">
      <div class="inline-flex items-center space-x-2 bg-green-500/20 text-green-200 px-3 py-1 rounded-full border border-green-400/30 text-xs">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span data-lang-key="gdpr_compliant">100% GDPR Compliant</span>
      </div>
    </div>
    
    <!-- Development test button (remove in production) -->
    <div class="flex justify-center mb-4 space-x-4">
      <button onclick="window.resetCookieBanner && window.resetCookieBanner()" class="text-xs text-blue-300 hover:text-blue-200 underline opacity-50 hover:opacity-100 transition-opacity">
        Reset Cookie Banner
      </button>
      <button onclick="window.showCookieBanner && window.showCookieBanner()" class="text-xs text-green-300 hover:text-green-200 underline opacity-50 hover:opacity-100 transition-opacity">
        Force Show Banner
      </button>
    </div>
    
    <!-- Decorative elements -->
    <div class="mt-8 flex justify-center space-x-6 opacity-60">
      <div class="text-2xl animate-pulse" style="animation-delay: 0s;">ðŸš€</div>
      <div class="text-2xl animate-pulse" style="animation-delay: 0.5s;">âš¡</div>
      <div class="text-2xl animate-pulse" style="animation-delay: 1s;">âœ¨</div>
    </div>
  </div>
  
  <!-- Top gradient fade -->
  <div class="absolute top-0 left-0 right-0 h-20 bg-gradient-to-b from-gray-100 dark:from-gray-900 to-transparent"></div>
</footer>
