---
// Chart component wrapper, now with header-style tech look and improved responsiveness
export interface Props {
  id: string;
  title: string;
  caption?: string;
  chartType?: 'doughnut' | 'bar' | 'line';
  className?: string;
}

const { id, title, caption, chartType = 'bar', className = '' } = Astro.props;
---

<div class={`relative group bg-slate-900/95 backdrop-blur-xl border border-cyan-500/40 rounded-xl lg:rounded-2xl xl:rounded-3xl shadow-2xl hover:shadow-cyan-500/30 p-4 sm:p-6 lg:p-6 xl:p-8 transition-all duration-500 hover:scale-[1.005] lg:hover:scale-[1.01] hover:border-cyan-400/60 overflow-hidden min-h-[300px] lg:min-h-[280px] xl:min-h-[320px] w-full ${className}`}>
  <!-- Enhanced tech grid background with desktop focus -->
  <div class="absolute inset-0 opacity-15 lg:opacity-25 xl:opacity-30 pointer-events-none z-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle,rgba(6,182,212,0.12)_1px,transparent_1px)] bg-[size:24px_24px] lg:bg-[size:32px_32px] xl:bg-[size:40px_40px]"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/6 via-transparent to-purple-500/8"></div>
    <div class="absolute top-0 right-0 w-24 h-24 lg:w-40 lg:h-40 xl:w-56 xl:h-56 bg-gradient-to-bl from-cyan-400/15 to-transparent rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-20 h-20 lg:w-32 lg:h-32 xl:w-44 xl:h-44 bg-gradient-to-tr from-purple-400/12 to-transparent rounded-full blur-3xl"></div>
  </div>

  <!-- Header with enhanced styling optimized for full-width stacking -->
  <div class="relative z-10 mb-3 lg:mb-4 xl:mb-6 text-center">
    <div class="mb-2 lg:mb-3 xl:mb-4">
      <h3 class="text-xl sm:text-2xl lg:text-2xl xl:text-3xl font-black bg-gradient-to-r from-cyan-300 via-blue-400 to-purple-400 bg-clip-text text-transparent leading-tight tracking-tight select-none" data-lang-key={title}></h3>
      <div class="w-16 lg:w-20 xl:w-24 h-0.5 bg-gradient-to-r from-cyan-400 to-purple-500 mx-auto mt-2 rounded-full"></div>
    </div>
    {caption && (
      <p class="text-sm lg:text-sm xl:text-base text-slate-200 leading-relaxed font-medium" data-lang-key={caption}></p>
    )}
  </div>

  <!-- Enhanced chart container optimized for full-width desktop stacking -->
  <div class="relative z-10 bg-slate-800/60 backdrop-blur-sm rounded-xl lg:rounded-xl p-3 sm:p-4 lg:p-4 xl:p-6 border border-cyan-500/30 group-hover:border-cyan-400/50 shadow-inner shadow-cyan-500/10 transition-all duration-300">
    <!-- Chart background enhancements -->
    <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/4 via-blue-500/4 to-purple-500/4 rounded-xl pointer-events-none"></div>
    <div class="absolute inset-0 opacity-8 lg:opacity-10 pointer-events-none">
      <div class="absolute inset-0 bg-[radial-gradient(circle,rgba(6,182,212,0.15)_1px,transparent_1px)] bg-[size:16px_16px] lg:bg-[size:18px_18px]"></div>
    </div>
    
    <!-- Chart canvas with compact sizing for full-width stacking -->
    <canvas id={id} class="relative z-10 w-full chart-canvas" style="min-height: 160px; height: 180px; max-height: 200px;"></canvas>
  </div>

  <slot />

  <!-- Enhanced corner accents optimized for stacking -->
  <div class="absolute top-3 right-3 lg:top-4 lg:right-4 xl:top-6 xl:right-6 opacity-30 group-hover:opacity-60 transition-all duration-500 z-10">
    <div class="w-2 h-2 lg:w-3 lg:h-3 xl:w-4 xl:h-4 bg-cyan-400 rounded-full shadow-lg shadow-cyan-400/50"></div>
  </div>
  <div class="absolute bottom-3 left-3 lg:bottom-4 lg:left-4 xl:bottom-6 xl:left-6 opacity-20 group-hover:opacity-40 transition-all duration-500 z-10">
    <div class="w-1.5 h-1.5 lg:w-2 lg:h-2 xl:w-3 xl:h-3 bg-purple-400 rounded-full shadow-lg shadow-purple-400/50"></div>
  </div>
  
  <!-- Subtle border glow on hover -->
  <div class="absolute inset-0 rounded-xl lg:rounded-2xl xl:rounded-3xl border border-transparent group-hover:border-cyan-300/30 transition-all duration-500 pointer-events-none"></div>
</div>
