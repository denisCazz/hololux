---
// Technology comparison card component
export interface Props {
  title: string;
  description: string;
  restState: string;
  activeState: string;
  restIcon: string;
  activeIcon: string;
}

const { title, description, restState, activeState, restIcon, activeIcon } = Astro.props;
---

<div class="group bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl shadow-lg hover:shadow-2xl p-6 md:p-8 transition-all duration-300 hover:scale-[1.02] border border-gray-200/30 dark:border-gray-700/30 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-5 group-hover:opacity-8 transition-opacity duration-300">
    <div class="absolute top-4 right-4 text-6xl opacity-20">‚öôÔ∏è</div>
    <div class="absolute bottom-4 left-4 text-4xl opacity-15">üîß</div>
  </div>
  
  <!-- Main content -->
  <div class="relative z-10">
    <!-- Header -->
    <div class="mb-6">
      <h3 class="text-2xl md:text-3xl font-bold text-[#0073E6] dark:text-blue-400 mb-4 group-hover:text-[#004080] dark:group-hover:text-blue-300 transition-colors duration-300" data-lang-key={title}></h3>
      <p class="text-gray-600 dark:text-gray-400 leading-relaxed group-hover:text-gray-700 dark:group-hover:text-gray-300 transition-colors duration-300" data-lang-key={description}></p>
    </div>
    
    <!-- Technology states comparison -->
    <div class="bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-700 dark:to-gray-600 p-6 rounded-xl border-2 border-dashed border-[#4DA6FF]/50 dark:border-blue-500/50 group-hover:border-[#0073E6] dark:group-hover:border-blue-400 transition-all duration-300 relative">
      <!-- Animated background -->
      <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      
      <!-- States container with proper alignment -->
      <div class="relative z-10 space-y-4">
        <!-- Rest state -->
        <div class="flex items-center justify-between group-hover:transform group-hover:translate-x-1 transition-transform duration-300">
          <div class="flex items-center flex-1">
            <span class="text-base md:text-lg font-semibold text-gray-700 dark:text-gray-300 mr-3" data-lang-key={restState}></span>
            <span class="text-2xl md:text-3xl mr-3 group-hover:scale-110 transition-transform duration-300">{restIcon}</span> 
            <span data-lang-key="mirror" class="bg-gradient-to-r from-gray-600 to-gray-800 dark:from-gray-300 dark:to-gray-100 bg-clip-text text-transparent font-bold"></span>
          </div>
        </div>
        
        <!-- Center arrow -->
        <div class="flex justify-center">
          <div class="text-2xl text-blue-500 dark:text-blue-400 group-hover:scale-110 group-hover:text-blue-600 dark:group-hover:text-blue-300 transition-all duration-300">
            ‚Üì
          </div>
        </div>
        
        <!-- Active state -->
        <div class="flex items-center justify-between group-hover:transform group-hover:translate-x-1 transition-transform duration-300">
          <div class="flex items-center flex-1">
            <span class="text-base md:text-lg font-semibold text-gray-700 dark:text-gray-300 mr-3" data-lang-key={activeState}></span>
            <span class="text-2xl md:text-3xl mr-3 group-hover:scale-110 transition-transform duration-300">{activeIcon}</span> 
            <span data-lang-key="transparent" class="bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent font-bold"></span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Technology indicator -->
    <div class="mt-6 flex items-center justify-center space-x-2">
      <div class="w-3 h-3 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full group-hover:scale-110 transition-transform duration-300"></div>
      <div class="w-2 h-2 bg-gray-400 dark:bg-gray-600 rounded-full group-hover:bg-blue-500 transition-all duration-300"></div>
      <div class="w-2 h-2 bg-gray-400 dark:bg-gray-600 rounded-full group-hover:bg-purple-500 transition-all duration-300" style="transition-delay: 0.1s;"></div>
    </div>
  </div>
  
  <!-- Subtle hover shine effect -->
  <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700 rounded-2xl"></div>
  </div>
</div>
