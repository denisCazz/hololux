---
// TechCard, header-style tech look
export interface Props {
  title: string;
  description: string;
  restState: string;
  activeState: string;
  restIcon: string;
  activeIcon: string;
}

const { title, description, restState, activeState, restIcon, activeIcon } = Astro.props;
---

<div class="w-full relative group bg-slate-900/95 backdrop-blur-xl border border-cyan-500/40 rounded-xl lg:rounded-xl xl:rounded-2xl shadow-2xl hover:shadow-cyan-500/30 p-4 sm:p-5 lg:p-6 xl:p-8 transition-all duration-500 hover:scale-[1.02] lg:hover:scale-[1.01] hover:border-cyan-400/60 overflow-hidden min-h-[200px] lg:min-h-[220px] xl:min-h-[240px]">
  <!-- Enhanced tech grid background optimized for stacking -->
  <div class="absolute inset-0 opacity-15 lg:opacity-18 pointer-events-none z-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle,rgba(6,182,212,0.15)_1px,transparent_1px)] bg-[size:20px_20px] lg:bg-[size:24px_24px]"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/8 via-transparent to-purple-500/8"></div>
    <div class="absolute top-0 right-0 w-24 h-24 lg:w-32 lg:h-32 bg-gradient-to-bl from-cyan-400/20 to-transparent rounded-full blur-2xl lg:blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 lg:w-44 lg:h-44 bg-gradient-to-tr from-purple-400/15 to-transparent rounded-full blur-3xl"></div>
  </div>
  <!-- Main content -->
  <div class="relative z-10 h-full flex flex-col">
    <!-- Title with enhanced styling - compact -->
    <div class="mb-2 lg:mb-3">
      <h3 class="text-lg sm:text-xl lg:text-2xl xl:text-3xl font-black bg-gradient-to-r from-cyan-300 via-blue-400 to-purple-400 bg-clip-text text-transparent leading-tight tracking-tight select-none" data-lang-key={title}></h3>
      <div class="w-16 lg:w-20 h-0.5 bg-gradient-to-r from-cyan-400 to-purple-500 mt-2 rounded-full"></div>
    </div>
    
    <!-- Description with better typography - compact -->
    <p class="text-sm lg:text-base xl:text-lg text-slate-200 leading-relaxed font-medium mb-3 lg:mb-4 flex-grow" data-lang-key={description}></p>
    
    <!-- Enhanced comparison container - compact -->
    <div class="bg-slate-800/60 backdrop-blur-sm p-3 sm:p-4 lg:p-5 rounded-lg lg:rounded-xl border border-cyan-500/30 group-hover:border-cyan-400/50 transition-all duration-300 relative">
      <!-- Animated background glow -->
      <div class="absolute inset-0 bg-gradient-to-r from-cyan-500/5 via-blue-500/5 to-purple-500/5 rounded-lg lg:rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      
      <!-- States container - compact -->
      <div class="relative z-10 flex flex-col gap-2 lg:gap-3">
        <!-- Rest state with enhanced styling - compact -->
        <div class="flex items-center justify-between p-2 lg:p-3 bg-slate-700/40 rounded-md lg:rounded-lg border border-slate-600/30 group-hover:border-slate-500/50 transition-all duration-300">
          <div class="flex items-center gap-2 lg:gap-3">
            <span class="text-sm lg:text-base font-bold text-slate-300 flex-shrink-0" data-lang-key={restState}></span>
            <span class="text-lg lg:text-2xl group-hover:scale-110 transition-transform duration-300 flex-shrink-0">{restIcon}</span>
          </div>
          <span class="bg-gradient-to-r from-slate-400 to-slate-200 bg-clip-text text-transparent font-bold text-sm lg:text-base">mirror</span>
        </div>
        
        
        <!-- Enhanced arrow with glow - compact -->
        <div class="flex justify-center py-1">
          <div class="relative">
            <div class="absolute inset-0 bg-cyan-400/20 rounded-full blur-sm"></div>
            <div class="relative text-lg lg:text-xl text-cyan-400 group-hover:scale-125 group-hover:text-cyan-300 transition-all duration-300 font-bold">â†“</div>
          </div>
        </div>
        
        <!-- Active state with enhanced styling - compact -->
        <div class="flex items-center justify-between p-2 lg:p-3 bg-gradient-to-r from-cyan-500/10 to-blue-500/10 rounded-md lg:rounded-lg border border-cyan-500/40 group-hover:border-cyan-400/60 transition-all duration-300">
          <div class="flex items-center gap-2 lg:gap-3">
            <span class="text-sm lg:text-base font-bold text-cyan-200 flex-shrink-0" data-lang-key={activeState}></span>
            <span class="text-lg lg:text-2xl group-hover:scale-110 transition-transform duration-300 flex-shrink-0">{activeIcon}</span>
          </div>
          <span class="bg-gradient-to-r from-cyan-400 to-purple-400 bg-clip-text text-transparent font-bold text-sm lg:text-base">transparent</span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Enhanced corner accents - compact -->
  <div class="absolute top-3 right-3 lg:top-4 lg:right-4 opacity-40 group-hover:opacity-70 transition-all duration-500 z-10">
    <div class="w-2 h-2 lg:w-3 lg:h-3 bg-cyan-400 rounded-full shadow-md shadow-cyan-400/50"></div>
  </div>
  <div class="absolute bottom-3 left-3 lg:bottom-4 lg:left-4 opacity-30 group-hover:opacity-50 transition-all duration-500 z-10">
    <div class="w-1.5 h-1.5 lg:w-2 lg:h-2 bg-purple-400 rounded-full shadow-md shadow-purple-400/50"></div>
  </div>
  </div>
  
  <!-- Subtle border glow on hover -->
  <div class="absolute inset-0 rounded-2xl lg:rounded-3xl border border-transparent group-hover:border-cyan-300/30 transition-all duration-500 pointer-events-none"></div>
</div>
