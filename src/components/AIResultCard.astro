---
// AI Result card component
export interface Props {
  title: string;
  description: string;
  className?: string;
}

const { title, description, className = '' } = Astro.props;
---

<div class={`relative group bg-slate-900/90 backdrop-blur-xl border border-cyan-500/40 rounded-2xl lg:rounded-3xl shadow-2xl hover:shadow-cyan-500/20 p-6 sm:p-8 lg:p-10 xl:p-12 transition-all duration-500 hover:scale-[1.02] lg:hover:scale-105 hover:border-cyan-400/60 overflow-hidden min-h-[140px] lg:min-h-[180px] ${className}`}>
  <!-- Enhanced tech grid background -->
  <div class="absolute inset-0 opacity-20 lg:opacity-25 pointer-events-none z-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle,rgba(6,182,212,0.15)_1px,transparent_1px)] bg-[size:28px_28px] lg:bg-[size:36px_36px]"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 via-transparent to-purple-500/5"></div>
    <div class="absolute top-0 right-0 w-32 h-32 lg:w-48 lg:h-48 bg-gradient-to-bl from-cyan-400/20 to-transparent rounded-full blur-3xl"></div>
  </div>

  <!-- Content container with better spacing -->
  <div class="relative z-10 flex flex-col h-full">
    <!-- Title with improved hierarchy -->
    <div class="mb-4 lg:mb-6">
      <h4 class="text-xl sm:text-2xl lg:text-3xl xl:text-4xl font-black bg-gradient-to-r from-cyan-300 via-blue-400 to-purple-400 bg-clip-text text-transparent leading-tight tracking-tight" data-lang-key={title}></h4>
      <div class="w-16 lg:w-20 h-0.5 bg-gradient-to-r from-cyan-400 to-purple-500 mt-2 rounded-full"></div>
    </div>
    
    <!-- Description with better readability -->
    <div class="flex-grow">
      <p class="text-base lg:text-lg xl:text-xl text-slate-200 leading-relaxed font-medium" data-lang-key={description}></p>
    </div>
  </div>

  <!-- Enhanced corner accents -->
  <div class="absolute top-6 right-6 opacity-40 group-hover:opacity-70 transition-all duration-500 z-10">
    <div class="w-3 h-3 lg:w-4 lg:h-4 bg-cyan-400 rounded-full shadow-lg shadow-cyan-400/50"></div>
  </div>
  <div class="absolute bottom-6 left-6 opacity-30 group-hover:opacity-50 transition-all duration-500 z-10">
    <div class="w-2 h-2 lg:w-3 lg:h-3 bg-purple-400 rounded-full shadow-lg shadow-purple-400/50"></div>
  </div>
  
  <!-- Subtle border glow on hover -->
  <div class="absolute inset-0 rounded-2xl lg:rounded-3xl border border-transparent group-hover:border-cyan-300/30 transition-all duration-500 pointer-events-none"></div>
</div>
