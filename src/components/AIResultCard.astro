---
// AI Result card component
export interface Props {
  title: string;
  description: string;
  className?: string;
}

const { title, description, className = '' } = Astro.props;
---

<div class={`ai-result-card bg-white dark:bg-gray-800 border-l-blue-500 dark:border-l-blue-400 p-6 rounded-lg shadow-md ${className}`}>
  <h4 class="text-xl font-semibold text-[#0073E6] dark:text-blue-400 mb-2" data-lang-key={title}></h4>
  <p class="text-gray-600 dark:text-gray-400" data-lang-key={description}></p>
</div>
