---
// Challenge card, header-style tech look
export interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="w-full relative group bg-slate-900/95 backdrop-blur-xl border border-cyan-500/40 rounded-xl lg:rounded-xl xl:rounded-2xl shadow-2xl hover:shadow-cyan-500/30 p-4 sm:p-5 lg:p-6 xl:p-8 transition-all duration-500 hover:scale-[1.02] lg:hover:scale-[1.01] hover:border-cyan-400/60 overflow-hidden min-h-[180px] lg:min-h-[200px] xl:min-h-[220px]">
  <!-- Enhanced tech grid background optimized for stacking -->
  <div class="absolute inset-0 opacity-15 lg:opacity-18 pointer-events-none z-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle,rgba(6,182,212,0.15)_1px,transparent_1px)] bg-[size:20px_20px] lg:bg-[size:24px_24px]"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/8 via-transparent to-purple-500/8"></div>
    <div class="absolute top-0 right-0 w-24 h-24 lg:w-32 lg:h-32 bg-gradient-to-bl from-orange-400/15 to-transparent rounded-full blur-2xl lg:blur-3xl"></div>
  </div>

  <!-- Main content optimized for stacking -->
  <div class="relative z-10 flex flex-col items-center text-center h-full">
    <!-- Icon with enhanced presentation - compact -->
    <div class="mb-2 lg:mb-3 relative">
      <div class="absolute inset-0 bg-gradient-to-r from-orange-400/20 via-red-400/20 to-yellow-400/20 rounded-full blur-xl lg:blur-2xl"></div>
      <div class="relative text-2xl sm:text-3xl lg:text-4xl xl:text-5xl group-hover:scale-110 transition-transform duration-300 select-none">{icon}</div>
    </div>
    
    <!-- Title with enhanced styling - compact -->
    <div class="mb-2 lg:mb-3">
      <h3 class="text-lg sm:text-xl lg:text-2xl xl:text-3xl font-black bg-gradient-to-r from-cyan-300 via-blue-400 to-purple-400 bg-clip-text text-transparent leading-tight tracking-tight select-none flex-shrink-0" data-lang-key={title}></h3>
      <div class="w-16 lg:w-20 h-0.5 bg-gradient-to-r from-cyan-400 to-purple-500 mx-auto mt-2 rounded-full"></div>
    </div>
    
    <!-- Description with better typography - compact -->
    <p class="text-sm lg:text-base xl:text-lg text-slate-200 leading-relaxed font-medium mb-3 lg:mb-4 flex-grow" data-lang-key={description}></p>
    
    <!-- Enhanced challenge indicators - compact -->
    <div class="flex items-center justify-center gap-2 lg:gap-3 flex-shrink-0">
      <div class="flex items-center gap-1.5">
        <div class="w-1.5 h-1.5 lg:w-2 lg:h-2 bg-orange-400 rounded-full animate-pulse shadow-md shadow-orange-400/50"></div>
        <div class="w-1.5 h-1.5 lg:w-2 lg:h-2 bg-red-400 rounded-full animate-pulse shadow-md shadow-red-400/50" style="animation-delay: 0.5s;"></div>
        <div class="w-1.5 h-1.5 lg:w-2 lg:h-2 bg-yellow-400 rounded-full animate-pulse shadow-md shadow-yellow-400/50" style="animation-delay: 1s;"></div>
      </div>
      <span class="text-xs lg:text-sm text-slate-300 font-semibold opacity-80 group-hover:opacity-100 transition-opacity duration-300">Challenge</span>
    </div>
  </div>

  <!-- Enhanced corner accents -->
  <div class="absolute top-6 right-6 opacity-40 group-hover:opacity-70 transition-all duration-500 z-10">
    <div class="w-4 h-4 lg:w-5 lg:h-5 bg-orange-400 rounded-full shadow-lg shadow-orange-400/50"></div>
  </div>
  <div class="absolute bottom-6 left-6 opacity-30 group-hover:opacity-50 transition-all duration-500 z-10">
    <div class="w-3 h-3 lg:w-4 lg:h-4 bg-red-400 rounded-full shadow-lg shadow-red-400/50"></div>
  </div>
  
  <!-- Subtle border glow on hover -->
  <div class="absolute inset-0 rounded-2xl lg:rounded-3xl border border-transparent group-hover:border-orange-300/30 transition-all duration-500 pointer-events-none"></div>
</div>
