// Header component with theme and language toggles
---

<header class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 text-white overflow-hidden">
  <!-- Tech Grid Background -->
  <div class="absolute inset-0 opacity-25 pointer-events-none">
    <div class="absolute inset-0 bg-[radial-gradient(circle,rgba(34,193,195,0.08)_1px,transparent_1px)] bg-[size:32px_32px]"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-transparent via-blue-700/10 to-transparent"></div>
  </div>

  <!-- Main content container -->
  <div class="relative z-20 text-center px-4 md:px-8 max-w-3xl mx-auto">
    <!-- Logo/Brand Section -->
    <div class="mb-8">
      <h1 class="text-4xl sm:text-5xl md:text-7xl font-extrabold tracking-tight flex items-center justify-center gap-2">
        <span class="bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-500 bg-clip-text text-transparent select-none">HOLO</span>
        <span class="text-white/90 select-none">LUX</span>
