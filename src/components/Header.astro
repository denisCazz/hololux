---
// Header component with theme and language toggles
---

<header class="relative min-h-[50vh] md:min-h-[70vh] flex items-center justify-center bg-gradient-to-br from-[#001a33] via-[#0059B3] to-[#0073E6] dark:from-gray-900 dark:via-gray-800 dark:to-gray-700 text-white overflow-hidden">
  <!-- Optimized geometric background for mobile -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-blue-600/20 via-transparent to-purple-600/20"></div>
    <!-- Reduced geometric shapes on small screens -->
    <div class="hidden sm:block absolute top-20 left-20 w-32 h-32 bg-gradient-to-br from-white/10 to-blue-300/20 rounded-3xl rotate-45 md:animate-pulse"></div>
    <div class="hidden sm:block absolute top-40 right-32 w-24 h-24 bg-gradient-to-br from-blue-300/15 to-white/10 rounded-2xl -rotate-12 md:animate-pulse" style="animation-delay: 0.7s;"></div>
    <div class="hidden md:block absolute bottom-32 left-1/3 w-20 h-20 bg-gradient-to-br from-white/8 to-blue-200/15 rounded-full md:animate-pulse" style="animation-delay: 1.4s;"></div>
    <div class="hidden md:block absolute bottom-20 right-1/4 w-16 h-16 bg-gradient-to-br from-blue-200/12 to-white/8 rounded-xl rotate-45 md:animate-pulse" style="animation-delay: 2.1s;"></div>
  </div>

  <!-- Main content container -->
  <div class="relative z-20 text-center px-6 md:px-12 max-w-6xl mx-auto">
    <!-- Modern title with enhanced typography -->
    <div class="mb-6 md:mb-8">
      <h1 class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-black mb-4 md:mb-6 animate-on-scroll">
        <span class="bg-gradient-to-r from-white via-blue-100 to-blue-200 bg-clip-text text-transparent drop-shadow-2xl">
          Holo Lux
        </span>
      </h1>
      <div class="relative">
        <p class="text-lg sm:text-xl md:text-3xl lg:text-4xl text-blue-50 dark:text-blue-200 font-light leading-relaxed animate-on-scroll max-w-4xl mx-auto" data-lang-key="main_subtitle" style="animation-delay: 0.3s;"></p>
        <!-- Decorative line -->
        <div class="mt-4 md:mt-6 w-16 md:w-24 h-1 bg-gradient-to-r from-blue-300 to-white mx-auto rounded-full animate-on-scroll" style="animation-delay: 0.6s;"></div>
      </div>
    </div>
    
    <!-- Optimized floating tech elements - simpler on mobile -->
    <div class="flex justify-center items-center space-x-6 md:space-x-12 opacity-60 mt-8 md:mt-12 animate-on-scroll" style="animation-delay: 0.9s;">
      <div class="flex flex-col items-center group">
        <div class="text-3xl md:text-5xl mb-1 md:mb-2 md:group-hover:scale-110 transition-transform duration-300">ðŸ”¬</div>
        <span class="text-xs md:text-sm font-medium text-blue-200">Research</span>
      </div>
      <div class="flex flex-col items-center group">
        <div class="text-3xl md:text-5xl mb-1 md:mb-2 md:group-hover:scale-110 transition-transform duration-300">âš¡</div>
        <span class="text-xs md:text-sm font-medium text-blue-200">Innovation</span>
      </div>
      <div class="flex flex-col items-center group">
        <div class="text-3xl md:text-5xl mb-1 md:mb-2 md:group-hover:scale-110 transition-transform duration-300">âœ¨</div>
        <span class="text-xs md:text-sm font-medium text-blue-200">Future</span>
      </div>
    </div>
  </div>

  <!-- Mobile-optimized control panel -->
  <div class="absolute top-4 right-4 left-4 z-30">
    <!-- Mobile layout: stacked horizontally in top-right corner -->
    <div class="flex justify-end md:justify-center">
      <div class="flex items-center gap-2 md:gap-4">
        <!-- Theme toggle - compact on mobile, elegant on desktop -->
        <button id="theme-toggle-btn" class="mobile-control-btn md:floating-control-btn group relative">
          <div class="relative z-10 flex items-center justify-center w-10 h-10 md:w-14 md:h-14">
            <i id="theme-icon" class="fas fa-sun text-lg md:text-xl text-yellow-300 md:group-hover:rotate-180 transition-transform duration-500"></i>
          </div>
          <div class="absolute inset-0 rounded-full bg-white/20 md:bg-white/15 backdrop-blur-md md:backdrop-blur-xl border border-white/30 md:border-white/25 shadow-lg md:shadow-2xl transition-all duration-300 group-hover:bg-white/30 md:group-hover:bg-white/25 md:group-hover:scale-110 group-hover:shadow-xl md:group-hover:shadow-3xl"></div>
          <!-- Tooltip only on desktop -->
          <div class="tooltip hidden md:block absolute -bottom-12 left-1/2 transform -translate-x-1/2 bg-gray-900/90 dark:bg-gray-100/90 text-white dark:text-gray-900 text-sm px-3 py-2 rounded-lg opacity-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap pointer-events-none shadow-xl backdrop-blur-sm">
            <span data-lang-key="theme_tooltip">Cambia tema</span>
            <div class="absolute -top-1 left-1/2 transform -translate-x-1/2 w-2 h-2 bg-gray-900/90 dark:bg-gray-100/90 rotate-45"></div>
          </div>
        </button>
        
        <!-- Language toggle - compact on mobile, elegant on desktop -->
        <button id="lang-toggle-btn" class="mobile-control-btn md:floating-control-btn group relative">
          <div class="relative z-10 flex items-center justify-center w-10 h-10 md:w-14 md:h-14">
            <span class="text-lg md:text-2xl">ðŸ‡®ðŸ‡¹</span>
          </div>
          <div class="absolute inset-0 rounded-full bg-white/20 md:bg-white/15 backdrop-blur-md md:backdrop-blur-xl border border-white/30 md:border-white/25 shadow-lg md:shadow-2xl transition-all duration-300 group-hover:bg-white/30 md:group-hover:bg-white/25 md:group-hover:scale-110 group-hover:shadow-xl md:group-hover:shadow-3xl"></div>
          <!-- Tooltip only on desktop -->
          <div class="tooltip hidden md:block absolute -bottom-12 left-1/2 transform -translate-x-1/2 bg-gray-900/90 dark:bg-gray-100/90 text-white dark:text-gray-900 text-sm px-3 py-2 rounded-lg opacity-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap pointer-events-none shadow-xl backdrop-blur-sm">
            <span data-lang-key="language_tooltip">Cambia lingua</span>
            <div class="absolute -top-1 left-1/2 transform -translate-x-1/2 w-2 h-2 bg-gray-900/90 dark:bg-gray-100/90 rotate-45"></div>
          </div>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Enhanced bottom gradient to prevent overlap issues -->
  <div class="absolute bottom-0 left-0 right-0 h-40 bg-gradient-to-t from-gray-100 dark:from-gray-900 via-gray-100/80 dark:via-gray-900/80 to-transparent pointer-events-none"></div>
</header>
