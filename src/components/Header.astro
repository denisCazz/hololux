---
// Header component with theme and language toggles
---

<header class="relative min-h-[70vh] flex items-center justify-center bg-gradient-to-br from-[#001a33] via-[#0059B3] to-[#0073E6] dark:from-gray-900 dark:via-gray-800 dark:to-gray-700 text-white overflow-hidden">
  <!-- Modern geometric background -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-blue-600/20 via-transparent to-purple-600/20"></div>
    <div class="absolute top-20 left-20 w-32 h-32 bg-gradient-to-br from-white/10 to-blue-300/20 rounded-3xl rotate-45 animate-pulse"></div>
    <div class="absolute top-40 right-32 w-24 h-24 bg-gradient-to-br from-blue-300/15 to-white/10 rounded-2xl -rotate-12 animate-pulse" style="animation-delay: 0.7s;"></div>
    <div class="absolute bottom-32 left-1/3 w-20 h-20 bg-gradient-to-br from-white/8 to-blue-200/15 rounded-full animate-pulse" style="animation-delay: 1.4s;"></div>
    <div class="absolute bottom-20 right-1/4 w-16 h-16 bg-gradient-to-br from-blue-200/12 to-white/8 rounded-xl rotate-45 animate-pulse" style="animation-delay: 2.1s;"></div>
  </div>

  <!-- Main content container -->
  <div class="relative z-20 text-center px-6 md:px-12 max-w-6xl mx-auto">
    <!-- Modern title with enhanced typography -->
    <div class="mb-8">
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-black mb-6 animate-on-scroll">
        <span class="bg-gradient-to-r from-white via-blue-100 to-blue-200 bg-clip-text text-transparent drop-shadow-2xl">
          Holo Lux
        </span>
      </h1>
      <div class="relative">
        <p class="text-xl md:text-3xl lg:text-4xl text-blue-50 dark:text-blue-200 font-light leading-relaxed animate-on-scroll max-w-4xl mx-auto" data-lang-key="main_subtitle" style="animation-delay: 0.3s;"></p>
        <!-- Decorative line -->
        <div class="mt-6 w-24 h-1 bg-gradient-to-r from-blue-300 to-white mx-auto rounded-full animate-on-scroll" style="animation-delay: 0.6s;"></div>
      </div>
    </div>
    
    <!-- Modern floating tech elements -->
    <div class="flex justify-center items-center space-x-12 opacity-60 mt-12 animate-on-scroll" style="animation-delay: 0.9s;">
      <div class="flex flex-col items-center group">
        <div class="text-5xl mb-2 group-hover:scale-110 transition-transform duration-300">ðŸ”¬</div>
        <span class="text-sm font-medium text-blue-200">Research</span>
      </div>
      <div class="flex flex-col items-center group">
        <div class="text-5xl mb-2 group-hover:scale-110 transition-transform duration-300">âš¡</div>
        <span class="text-sm font-medium text-blue-200">Innovation</span>
      </div>
      <div class="flex flex-col items-center group">
        <div class="text-5xl mb-2 group-hover:scale-110 transition-transform duration-300">âœ¨</div>
        <span class="text-sm font-medium text-blue-200">Future</span>
      </div>
    </div>
  </div>

  <!-- Modern control panel - positioned more intuitively -->
  <div class="absolute top-4 right-4 z-30">
    <div class="flex items-center space-x-2 sm:space-x-3 glass-panel rounded-2xl p-2 sm:p-3 shadow-lg">
      <!-- Theme toggle with icon and label -->
      <button id="theme-toggle-btn" class="control-button flex items-center space-x-1 sm:space-x-2 px-2 sm:px-4 py-2 rounded-xl bg-white/10 hover:bg-white/20 transition-all duration-300 group">
        <i id="theme-icon" class="fas fa-sun text-yellow-300 group-hover:rotate-180 transition-transform duration-500"></i>
        <span class="text-xs sm:text-sm font-medium hidden sm:block">Theme</span>
      </button>
      
      <!-- Language toggle with flag and label -->
      <button id="lang-toggle-btn" class="control-button flex items-center space-x-1 sm:space-x-2 px-2 sm:px-4 py-2 rounded-xl bg-white/10 hover:bg-white/20 transition-all duration-300">
        <span class="text-base sm:text-lg">ðŸ‡®ðŸ‡¹</span>
        <span class="text-xs sm:text-sm font-medium hidden sm:block">Italiano</span>
      </button>
    </div>
  </div>
  
  <!-- Enhanced bottom gradient to prevent overlap issues -->
  <div class="absolute bottom-0 left-0 right-0 h-40 bg-gradient-to-t from-gray-100 dark:from-gray-900 via-gray-100/80 dark:via-gray-900/80 to-transparent pointer-events-none"></div>
</header>
